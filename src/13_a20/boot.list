   112                              <1> ;************************************************************************
   113                              <1> ;	数値を文字に変換
   114                              <1> ;========================================================================
   115                              <1> ;■書式		: void itoa(num, buff, size, radix, flags);
   116                              <1> ;
   117                              <1> ;■引数
   118                              <1> ;	num		: 変換する数値
   119                              <1> ;	buff	: 保存先バッファアドレス
