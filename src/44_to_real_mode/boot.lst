   163                              <1> 												; ------|--------
   164                              <1> 												;    + 2| IP（戻り番地）
   165 0000020C 55                  <1> 		push	bp								;  BP+ 0| BP（元の値）
   166 0000020D 89E5                <1> 		mov		bp, sp							; ------+--------
   167                              <1> 
