   184 000002AE C1C908              <1> 		ror		cx, 8							;   
   185 000002B1 41                  <1> 		inc		cx								;   
   186                              <1> 
   187 000002B2 0FB6DE              <1> 		movzx	bx, dh							;   BX = ヘッド数（1ベース）
   188 000002B5 43                  <1> 		inc		bx								;   
