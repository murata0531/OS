   169                              <1> 		;---------------------------------------
   170 000005FF 50                  <1> 		push	ax
   171 00000600 53                  <1> 		push	bx
   172 00000601 52                  <1> 		push	dx
   173 00000602 56                  <1> 		push	si
   174 00000603 57                  <1> 		push	di
