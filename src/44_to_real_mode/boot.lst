    37                              <1> ;************************************************************************
    38                              <1> ; 割り込みベクタ設定用
    39                              <1> ;
    40                              <1> ; 使い方：
    41                              <1> ;	set_vect	ベクタ番号, 割り込み処理 [, フラグ]
    42                              <1> ;
    43                              <1> ;************************************************************************
    44                              <1> %macro  set_vect 1-*.nolist
    45                              <1> 		push	eax
    46                              <1> 		push	edi
    47                              <1> 
    48                              <1> 		mov		edi, VECT_BASE + (%1 * 8)		; ベクタアドレス;
    49                              <1> 		mov		eax, %2
    50                              <1> 
    51                              <1> 	%if 3 == %0
    52                              <1> 		mov		[edi + 4], %3					; フラグ
    53                              <1> 	%endif
    54                              <1> 
    55                              <1> 		mov		[edi + 0], ax					; 例外アドレス[15: 0]
    56                              <1> 		shr		eax, 16							; 
    57                              <1> 		mov		[edi + 6], ax					; 例外アドレス[31:16]
    58                              <1> 
    59                              <1> 		pop		edi
    60                              <1> 		pop		eax
    61                              <1> %endmacro
