   186 00000220 01CF                <1> 		add		di, cx							; dst  = &dst[size - 1];
   187 00000222 4F                  <1> 		dec		di								; 
   188                              <1> 
   189 00000223 8B5E0C              <1> 		mov		bx, [bp +12]					; flags = オプション;
   190                              <1> 
   191                              <1> 		;---------------------------------------
   192                              <1> 		; 符号付き判定
   193                              <1> 		;---------------------------------------
