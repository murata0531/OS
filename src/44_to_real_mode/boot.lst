   233 0000025A 4F                  <1> 		dec		di								;   dst--;
   234                              <1> 												;   
   235 0000025B 83F800              <1> 		cmp		ax, 0							;   
   236 0000025E E0ED                <1> 		loopnz	.30L							; } while (AX);
   237                              <1> .30E:
