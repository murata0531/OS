   196 00000811 B002                <1> 		mov		al, 0x02						;   AL = 0x02;
   197 00000813 E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   198 00000815 E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 分データ
   199                              <1> 												;   
   200 00000817 C1E008              <1> 		shl		eax, 8							;   EAX <<= 8;      // データを退避
