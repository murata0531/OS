   196 00000802 E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   197 00000804 E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 時データ
   198                              <1> 												;   
   199 00000806 C1E008              <1> 		shl		eax, 8							;   EAX <<= 8;      // データを退避
   200                              <1> 												;   
   201                              <1> 												;   // RAM[0x02]:分
   202 00000809 B002                <1> 		mov		al, 0x02						;   AL = 0x02;
   203 0000080B E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   204 0000080D E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 分データ
   205                              <1> 												;   
   206 0000080F C1E008              <1> 		shl		eax, 8							;   EAX <<= 8;      // データを退避
   207                              <1> 												;   
   208                              <1> 												;   // RAM[0x00]:秒
   209 00000812 B000                <1> 		mov		al, 0x00						;   AL = 0x00;
   210 00000814 E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   211 00000816 E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 秒データ
   212                              <1> 												;   
   213 00000818 25FFFFFF00          <1> 		and		eax, 0x00_FF_FF_FF				;   // 下位3バイトのみ有効
   214                              <1> 												;   
   215 0000081D 8B5D08              <1> 		mov		ebx, [ebp + 8]					;   dst = 保存先;
   216 00000820 8903                <1> 		mov		[ebx], eax						;   [dst] = 時刻;
   217                              <1> 												;   
   218 00000822 B800000000          <1> 		mov		eax, 0							;   ret = 0; // 正常終了
