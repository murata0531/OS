   217 00000E3E 8D05[840F0000]      <1> 		lea		eax, [int_default]				; EAX   = 割り込み処理アドレス;
   218 00000E44 BB008E0800          <1> 		mov		ebx, 0x0008_8E00				; EBX   = セグメントセレクタ;
