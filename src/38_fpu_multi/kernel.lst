   171                              <1> rtc_get_time:
   172                              <1> 		;---------------------------------------
   173                              <1> 		; 【スタックフレームの構築】
   174                              <1> 		;---------------------------------------
   175                              <1> 												; ------|--------
   176                              <1> 												; EBP+ 8| 保存先アドレス
   177                              <1> 												; ---------------
   178 00000D5A 55                  <1> 		push	ebp								; EBP+ 4| EIP（戻り番地）
   179 00000D5B 89E5                <1> 		mov		ebp, esp						; EBP+ 0| EBP（元の値）
   180                              <1> 												; ---------------
   181                              <1> 		;---------------------------------------
   182                              <1> 		; 【レジスタの保存】
   183                              <1> 		;---------------------------------------
   184 00000D5D 53                  <1> 		push	ebx
   185                              <1> 
   186                              <1> 		;---------------------------------------
   187                              <1> 		; RTCから時刻を取得
   188                              <1> 		;---------------------------------------
   189 00000D5E B00A                <1> 		mov		al, 0x0A						; // レジスタA
   190 00000D60 E670                <1> 		out		0x70, al						; outp(0x70, AL);
   191 00000D62 E471                <1> 		in		al, 0x71						; AL = レジスタA;
   192 00000D64 A880                <1> 		test	al, 0x80						; if (DM & UIP) // 更新中
   193 00000D66 7407                <1> 		je		.10F							; {
   194 00000D68 B801000000          <1> 		mov		eax, 1							;   ret = 1; // データ更新中
   195 00000D6D EB27                <1> 		jmp		.10E							; }
   196                              <1> .10F:											; else
   197                              <1> 												; {
   198                              <1> 												;   // RAM[0x04]:時
   199 00000D6F B004                <1> 		mov		al, 0x04						;   AL = 0x04;
   200 00000D71 E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   201 00000D73 E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 時データ
   202                              <1> 												;   
   203 00000D75 C1E008              <1> 		shl		eax, 8							;   EAX <<= 8;      // データを退避
   204                              <1> 												;   
   205                              <1> 												;   // RAM[0x02]:分
   206 00000D78 B002                <1> 		mov		al, 0x02						;   AL = 0x02;
   207 00000D7A E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   208 00000D7C E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 分データ
   209                              <1> 												;   
   210 00000D7E C1E008              <1> 		shl		eax, 8							;   EAX <<= 8;      // データを退避
   211                              <1> 												;   
   212                              <1> 												;   // RAM[0x00]:秒
   213 00000D81 B000                <1> 		mov		al, 0x00						;   AL = 0x00;
   214 00000D83 E670                <1> 		out		0x70, al						;   outp(0x70, AL);
   215 00000D85 E471                <1> 		in		al, 0x71						;   AL = inp(0x71); // 秒データ
   216                              <1> 												;   
   217 00000D87 25FFFFFF00          <1> 		and		eax, 0x00_FF_FF_FF				;   // 下位3バイトのみ有効
   218                              <1> 												;   
   219 00000D8C 8B5D08              <1> 		mov		ebx, [ebp + 8]					;   dst = 保存先;
   220 00000D8F 8903                <1> 		mov		[ebx], eax						;   [dst] = 時刻;
   221                              <1> 												;   
   222 00000D91 B800000000          <1> 		mov		eax, 0							;   ret = 0; // 正常終了
   223                              <1> .10E:											; }
