   188                              <1> ;	一つの割り込み設定は8バイトで構成される。
   189                              <1> ;	
   190                              <1> ;	           |____________|____________| 
   191                              <1> ;	        [0]| Address Lo[15: 0]       | 
   192                              <1> ;	        [2]| Selector                | 
   193                              <1> ;	        [4]| Flags                   | 
   194                              <1> ;	        [6]|_Address Lo[32:16]_______| 
   195                              <1> ;	           |/////////////////////////| 
   196                              <1> ;	           |            |            | 
   197                              <1> ;	
