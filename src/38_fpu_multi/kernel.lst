   229                              <1> 
   230                              <1> 		;---------------------------------------
   231                              <1> 		; 【スタックフレームの破棄】
   232                              <1> 		;---------------------------------------
   233 00000D97 89EC                <1> 		mov		esp, ebp
   234 00000D99 5D                  <1> 		pop		ebp
   235                              <1> 
   236 00000D9A C3                  <1> 		ret
